<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/register_bg_Color"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fd"
        android:paddingTop="0dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_menu_emoticons"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@color/loginColor"
        android:layout_alignTop="@+id/et_username"
        android:layout_alignBottom="@+id/et_username"
        android:layout_alignParentStart="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="20dp"
        android:hint="请输入你的用户名"
        android:textColorHint="#B0B0B0"
        android:background="@color/loginColor"
        android:id="@+id/et_username"
        android:layout_marginBottom="127dp"
        android:layout_above="@+id/btn_login"
        android:layout_toEndOf="@+id/imageView2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#B0B0B0"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/et_username"
        android:id="@+id/view"/>
    <ImageView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_menu_help_holo_light"
        android:layout_height="wrap_content"
        android:background="@color/loginColor"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView3"
        android:layout_toStartOf="@+id/et_username"
        android:layout_below="@+id/imageView2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:hint="••••••"
        android:inputType="textPassword"
        android:textColorHint="#B0B0B0"
        android:background="@color/loginColor"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:id="@+id/et_password"/>

    <CheckBox
        android:id="@+id/cb_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:text="记住密码"
        android:textColor="#89898B"
        android:checked="false"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_btn"
        android:textColor="@color/loginColor"
        android:id="@+id/btn_login"
        android:textSize="22dp"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="112dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_password"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_btn"
        android:id="@+id/btn_register"
        android:textColor="@color/btn_login"
        android:textSize="22dp"
        android:background="@drawable/btn_register"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_password"
        android:layout_marginBottom="51dp"/>
</RelativeLayout>

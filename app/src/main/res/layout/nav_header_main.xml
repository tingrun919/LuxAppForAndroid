<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/side_nav_bar"
              android:visibility="gone"
              android:id="@+id/login_sc"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              >

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
        <!--android:src="@android:drawable/sym_def_app_icon"/>-->

    <order.smzs.com.companyorder.image.SmartImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/main_tx"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/register_bg_Color"
        android:id="@+id/header_view"
        android:layout_below="@+id/main_tx"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/header_tv1"
        android:layout_alignTop="@+id/main_tx"
        android:layout_toEndOf="@+id/main_tx"
        android:layout_marginStart="27dp"
        android:gravity="left|center"
        android:textColor="@color/register_bg_Color"
        android:textSize="18dp"
        android:layout_above="@+id/header_tv2"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/header_tv1"
        android:id="@+id/header_tv2"
        android:textSize="16dp"
        android:gravity="left|center"
        android:layout_above="@+id/header_view"
        android:layout_alignEnd="@+id/header_tv1"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/header_tv3"
        android:layout_below="@+id/header_view"
        android:layout_alignEnd="@+id/header_tv1"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/register_bg_Color"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/header_tv4"
        android:gravity="left|center"
        android:layout_alignTop="@+id/header_tv3"
        android:layout_alignStart="@+id/main_tx"
        android:text="已签到天数"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
